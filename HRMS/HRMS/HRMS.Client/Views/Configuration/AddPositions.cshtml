<section role="main" class="content-body">
    <header class="page-header">

        <h2>Configuration</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("index","Configuration")">
                        <i class="fas fa-cogs"></i>
                    </a>
                </li>
                <li><span>Configuration</span></li>
                <li><span>Positions</span></li>
                <li><span>Add Positions</span></li>

            </ol>

            <div class="sidebar-right-toggle"><i class=""></i></div>
            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>
                    <h2 class="card-title">New position</h2>
                </header>
                <div class="card-body">
                    <div class="form-group row ">
                        <a class="nav-link" href="#" onclick="SaveListBTN()">
                            <i class="fas fa-save fa-2x" aria-hidden="true" id="AddUsersToPosition"></i>
                            <span>Save</span>
                        </a>
                        <a class="nav-link" href="@Url.Action("Positions","Configuration")">
                            <i class="fas fa-undo-alt fa-2x" aria-hidden="true"></i>
                            <span>Cancel</span>
                        </a>
                    </div>

                    
                    <br />
                    <div class="row">
                        <label class="col-lg-10 control-label">Position name</label>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <select data-plugin-selectTwo class="form-control populate" id="SelectPositionDL">
                                    <option selected disabled></option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <br />
                            <table class="table table-responsive-md table-hover mb-0" id="datatable-default">
                                <thead>
                                    <tr>
                                        <th>Check</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Position</th>
                                    </tr>
                                </thead>
                                <tbody id="AddUsersToPositionTable"></tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>
