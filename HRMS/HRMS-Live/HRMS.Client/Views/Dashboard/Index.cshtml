<section role="main" class="content-body">
    <header class="page-header">

        <h2>Dashboard</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>

                    <a href="#">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span>Dashboard</span></li>

            </ol>
            <div class="sidebar-right-toggle"><i class=""></i></div>
            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>

    <!-- start: page -->
    <div class="row row-modified">

        <h2 class="card-title DashboardSeactionHeader">My Leaves requests</h2>
        <h2 class="card-title DashboardSeactionHeader">My Data</h2>
        <div class="col-md-3 ConfgIcon">
            <div class="card card-primary">
                <header class="card-header ConfgIconHeader text-center ">
                    <h2 class="card-title ConfgIconHeader">Leave Request</h2>
                </header>
                <a href="@Url.Action("AddNewRequest","Request")" class="">
                    <div class="card-body text-center">
                        <span><i class="far fa-edit fa-7x ConfgIconAnimate"></i></span>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-md-3 ConfgIcon">
            <div class="card card-primary">
                <header class="card-header ConfgIconHeader text-center ">
                    <h2 class="card-title ConfgIconHeader">My Requests</h2>
                </header>
                <a href="@Url.Action("ViewAllRequest", "Request")" class="">
                    <div class="card-body text-center">
                        <span><i class="fa fa-clipboard-list fa-7x ConfgIconAnimate "></i></span>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-md-3 ConfgIcon">
            <div class="card card-primary">
                <header class="card-header ConfgIconHeader text-center ">
                    <h2 class="card-title ConfgIconHeader">Profile</h2>
                </header>
                <a href="@Url.Action("UserProfile", "User", new {LID = UserID, UID = UserID})" class="">
                    <div class="card-body text-center">
                        <span><i class="far fa-user fa-7x ConfgIconAnimate"></i></span>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-md-3 ConfgIcon">
            <div class="card card-primary">
                <header class="card-header ConfgIconHeader text-center ">
                    <h2 class="card-title ConfgIconHeader">My Department</h2>
                </header>
                <a href="@Url.Action("MyDepartment","User")" class="">
                    <div class="card-body text-center">
                        <span><i class="fa fa-users fa-7x ConfgIconAnimate "></i></span>
                    </div>
                </a>
            </div>
        </div>
    </div>


    <!-- end: page -->
</section>

