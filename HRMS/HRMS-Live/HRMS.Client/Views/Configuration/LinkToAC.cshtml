<section role="main" class="content-body">
    <header class="page-header">

        <h2>Configuration</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("index","Configuration")">
                        <i class="fas fa-cogs"></i>
                    </a>
                </li>
                <li><span>Configuration</span></li>
                <li><span>Link users to AC</span></li>

            </ol>

            <div class="sidebar-right-toggle"><i class=""></i></div>
            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>
                    <h2 class="card-title">Users form Active Directory</h2>
                </header>
                <div class="card-body">


                    <div class="row">
                        <div class="col-md-6">
                            <br />
                            <br />
                            <table class="table table-responsive-md table-hover mb-0" id="datatable-default">
                                <thead>
                                    <tr>
                                        <th><b>User Name</b></th>
                                        <th><b>ID</b></th>
                                    </tr>
                                </thead>
                                <tbody id="AppendUsersToTable">
                                 
                                </tbody>
                            </table>
                        </div>

                        @*Partial View For User Data*@
                        <div class="col-md-6">
                            <div id="UserDataDiv">
                                <div>
                                    <br />
                                    <h2>User Data :</h2>
                                    <table class="table table-responsive-md table-hover mb-0" id="LeavesListTable">
                                        <tbody>
                                            <tr> <td style="width: 30%">User Name</td> <td style="width: 70%; text-align: right; color: #aaa;" id="RenderdUsername">N/A</td> </tr>
                                            <tr> <td style="width: 30%">Email</td> <td style="width: 70%; text-align: right; color: #aaa;" id="RenderdEmail">N/A</td></tr>
                                            <tr> <td style="width: 30%">ID</td> <td style="width: 70%; text-align: right; color: #aaa;" id="RenderdID">N/A</td> </tr>
                                        </tbody>
                                    </table>
                                    <br />
                                </div>
                            </div>

                            <h2>Link to Acess Control</h2>
                            <div class="form-group row">
                                <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Search users</label>
                                <div class="col-lg-6">
                                    <select data-plugin-selectTwo class="form-control populate" id="AccessContolListSelect">
                                        <option selected disabled>Search users</option>
                                       
                                    </select>
                                </div>
                                <a class="nav-link" href="#">
                                    <i class="fas fa-search " aria-hidden="true"></i>
                                    <span>Search</span>
                                </a>
                            </div>
                            <br />
                            <table class="table table-responsive-md table-hover mb-0" id="LeavesListTable">
                                <tbody>
                                    <tr> <td style="width: 20%">Name</td> <td id="ACUserName" style="width: 80%; text-align: right; color: #aaa;">N/A</td> </tr>
                                    <tr> <td style="width: 20%">ID</td> <td id="ACUserID" style="width: 80%; text-align: right; color: #aaa;">N/A</td> </tr>
                                </tbody>
                            </table>

                            <a class="nav-link pull-right" href="#" id="SubmitLinkUser">
                                <i class="fas fa-link fa-2x" aria-hidden="true"></i>
                                <span>Link user</span>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
