<section role="main" class="content-body">
    <header class="page-header">

        <h2>Configuration</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("index","Configuration")">
                        <i class="fas fa-cogs"></i>
                    </a>
                </li>
                <li><span>Configuration</span></li>
                <li><span>Positions</span></li>

            </ol>

            <div class="sidebar-right-toggle"><i class=""></i></div>
            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>
                    <h2 class="card-title">Positions</h2>
                </header>
                <div class="card-body">
                    <div class="form-group row">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#AddPositionModal">
                            <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
                            <span>Add New Position</span>
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-trash fa-2x" aria-hidden="true"></i>
                            <span>Delete Position</span>
                        </a>
                        <a class="nav-link" href="@Url.Action("addPositions","Configuration")">
                            <i class="fas fa-link fa-2x" aria-hidden="true"></i>
                            <span>Link Users to Position</span>
                        </a>
                        <a class="nav-link" href="#" onclick="GoBack()">
                            <i class="fas fa-undo-alt fa-2x" aria-hidden="true"></i>
                            <span>Cancel</span>
                        </a>
                        @*<a class="nav-link" href="#">
                                <i class="fas fa-pencil-alt fa-2x" aria-hidden="true"></i>
                                <span>Edit</span>
                            </a>*@


                        <!-- Button trigger modal -->
                        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddPositionModal">
                                Add New Position
                            </button>*@

                        <!-- Modal -->
                        <div class="modal fade" id="AddPositionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Position</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="usr">Position Name:</label>
                                            <input type="text" class="form-control" id="AddPosition">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="asasas">Cancel</button>
                                        <button type="button" class="btn btn-primary" onclick="SavePositionBTN()">Save Position</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-responsive-md table-hover mb-0" id="dataTablePosition" >
                                <thead>
                                    <tr>
                                        <th><b>Position  Name</b></th>
                                        <th><b>Members</b></th>
                                        <th><b>Action</b></th>

                                    </tr>
                                </thead>
                                <tbody id="PositionListTable"></tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            @*<h2>Names :</h2>*@
                            <table class="table table-responsive-md table-hover mb-0" id="dataTablePositionUsers" >
                                <thead>
                                    <tr>
                                        <th><b>User Name</b></th>
                                    </tr>
                                </thead>
                                <tbody id="UsersListTable">
                                    @*<tr> <td style="width: 30%"></td> <td style="width: 70%; text-align: right; color: #aaa;" id="PersonsInPosition"></td> </tr>*@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>
