    <section role="main" class="content-body">
        <header class="page-header">

            <h2>Configuration</h2>

            <div class="right-wrapper text-right">
                <ol class="breadcrumbs">
                    <li>
                        <a href="@Url.Action("index","Configuration")">
                            <i class="fas fa-cogs"></i>
                        </a>
                    </li>
                    <li><span>Configuration</span></li>
                    <li><span>Positions</span></li>
                </ol>

                <div class="sidebar-right-toggle"><i class=""></i></div>
                @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
            </div>
        </header>

        <!-- start: page -->
        <div class="row">
            <div class="col">
                <section class="card">
                    <header class="card-header">
                        <div class="card-actions">
                            <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                            <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                        </div>
                        <h2 class="card-title">Company hierarchy</h2>
                    </header>
                    <div class="card-body">
                        <div class="tabs">
                            <ul class="nav nav-tabs tabs-primary">

                                <li class="nav-item">
                                    <a class="nav-link active" href="#Departments" data-toggle="tab">Departments</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="#SubDepartments" data-toggle="tab">SubDepartments</a>
                                </li>

                            </ul>
                            <div class="tab-content">
                                <div id="Departments" class="tab-pane active">
                                    <div class="form-group row">

                                        <a class="nav-link" href="#" data-toggle="modal" data-target="#AddDepartmentModal">
                                            <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
                                            <span> Add New Department</span>
                                        </a>
                                        <a class="nav-link" href="#">
                                            <i class="fas fa-trash fa-2x" aria-hidden="true"></i>
                                            <span>Delete Department</span>
                                        </a>

                                        <a class="nav-link" href="@Url.Action("LinkUsersToDepartment","Configuration")">
                                            <i class="fas fa-link fa-2x" aria-hidden="true"></i>
                                            <span>Link Users To Department</span>
                                        </a>

                                        <a class="nav-link" href="#" onclick="GoBack()">
                                            <i class="fas fa-undo-alt fa-2x" aria-hidden="true"></i>
                                            <span>Cancel</span>
                                        </a>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <table class="table table-responsive-md table-hover mb-0" id="dataTableDepartment">
                                                <thead>
                                                    <tr>
                                                        <th><b>Department  Name</b></th>
                                                        <th><b>SubDepartments Count</b></th>
                                                        <th><b>Action</b></th>
                                                    </tr>
                                                </thead>
                                                <tbody id="DepartmentTable"></tbody>
                                            </table>
                                        </div>
                                        <div class="col-md-6">
                                            @*<h2 class="card-title">SubDepartments :</h2>*@
                                            <table class="table table-responsive-md table-hover mb-0" id="SubDataTableSubDepartments">
                                                <thead>
                                                    <tr>
                                                        <th><b>SubDepartment  Name</b></th>
 
                                                    </tr>
                                                </thead>
                                                <tbody id="DeptTable">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div id="SubDepartments" class="tab-pane">
                                    <div class="form-group row">
                                        <a class="nav-link" href="#" data-toggle="modal" data-target="#AddSubDepartmentModal">
                                            <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
                                            <span> Add New SubDepartment</span>
                                        </a>

                                        <a class="nav-link" href="#">
                                            <i class="fas fa-trash fa-2x" aria-hidden="true"></i>
                                            <span>Delete SubDepartments</span>
                                        </a>

                                        <a class="nav-link" href="@Url.Action("LinkUsersToSubDepartment","Configuration")">
                                            <i class="fas fa-link fa-2x" aria-hidden="true"></i>
                                            <span>Link Users To SubDepartment</span>
                                        </a>
                                         <a class="nav-link" href="#" onclick="GoBack()">
                                            <i class="fas fa-undo-alt fa-2x" aria-hidden="true"></i>
                                            <span>Cancel</span>
                                         </a>


                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <table class="table table-responsive-md table-hover mb-0" id="datatableSubDepartment" >
                                                <thead>
                                                    <tr>
                                                        <th><b>SubDepartment  Name</b></th>
                                                        <th><b>Members</b></th>
                                                        <th><b>Action</b></th>

                                                    </tr>
                                                </thead>
                                                <tbody id="SubDepartmentTable"></tbody>
                                            </table>
                                        </div>
                                        <div class="col-md-6">
                                            @*<h2 class="card-title">Users :</h2>*@
                                            <table class="table table-responsive-md table-hover mb-0" id="dataTableUsers">
                                                <thead>
                                                    <tr>
                                                        <th><b>Users  Name</b></th>

                                                    </tr>
                                                </thead>
                                                <tbody id="UsersTable">
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>



        <!-- end: page -->
    </section>



    <!-- Modal -->
    <div class="modal fade" id="AddSubDepartmentModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @*<div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add SubDepartment</h5>
                    </div>*@
                <div class="modal-body">
                    <div class="form-group">
                        <label for="usr">SubDepartment Name:</label>
                        <input type="text" class="form-control" id="AddSubDepartment">
                    </div>

                    <div class="col-lg-6">
                        <select data-plugin-selectTwo class="form-control populate selectpicker" id="SelectDepartment">
                            <option selected disabled>Search Department</option>
                        </select>
                        </br>
                        <select data-plugin-selectTwo class="form-control populate" id="SelectTeamManager">
                            <option selected disabled>Search Team Manager</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="SaveSubDepartmentBTN()">Save SubDepartment</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="AddDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @*<div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Department</h5>
                    </div>*@
                <div class="modal-body">
                    <div class="form-group">
                        <label for="usr">Department Name:</label>
                        <input type="text" class="form-control" id="AddDepartment">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="SaveDepartmentBTN()">Save Department</button>
                </div>
            </div>
        </div>
    </div>


