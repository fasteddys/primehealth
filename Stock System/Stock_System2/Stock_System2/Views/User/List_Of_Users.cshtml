@model IEnumerable<Stock_System2.Models.User>

@{
    ViewBag.Title = "List_Of_Users";
    Layout = "~/Views/Shared/Master.cshtml";
}


<script src="script.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery-1.7.min.js"></script>
@section HeaderSection
  {
    <div class="row">
        <div class="col-md-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
                <li><a href="#">Users</a></li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
}
@if(Model.Count()>=1)
{

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
       
                <div class="panel-body">
                    <table class="table table-hover table-inverse table-bordered" align="center" style="text-align:center;">
                        <tr class="warning" style="font-weight:bold; font-size:large; height:50px">
                            <th style="text-align:center" >User Name</th>
                            <th style="text-align:center"> Password <i class="fa fa-fw fa-sort"></i></th>
                            <th style="text-align:center">User Type</th>
                            <th style="width: 200px ; text-align:center">Action</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center" style="font-size:large; font-weight:bold; padding:12px"> @item.user_name </td>
                                <td align="center" style="font-size:large; font-weight:bold; padding:12px"> @item.password  </td>
                                <td align="center" style="font-size:large; font-weight:bold;"> @item.user_type </td>
                                <td align="center" style="font-size:large; font-weight:bold; margin-top:24px">  
                                    <a role="button" id="oo" class="openModal btn btn-success" style="color:white; font-weight:bold; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;" data-toggle="modal" data-target="#M2" href="/User/Edit?UserId=@item.user_id">Edit</a>
                                    <a role="button" id="oo" class="openModal btn btn-danger" style="color:white; font-weight:bold; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;" data-toggle="modal" data-target="#M2" href="/User/Delete?UserId=@item.user_id">Delete</a>
                                </td>

                            </tr>
                        }
                    </table>
                </div>
            </section>
        </div>
    </div>
</section>
    <div class="modal fade" id="M2" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" style="width:900px; height:500px;margin-left:330px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        ×
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        This Modal title
                    </h4>
                </div>
                <div class="modal-body" style="color:red;width:6000px;display:none">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">
                        Submit changes
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
        </div>
        }
        else
        {
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Please note , </strong> There are not data about Users of System
        </div>
        }
        <script type="text/javascript">
            $(function () {
                $(document).on('click', '#oo', function (e) {

                    $("#M2").dialog({ closeOnEscape: false });
                    $('#M2').modal({
                        keyboard: true,
                    })

                })

            });
        </script>




