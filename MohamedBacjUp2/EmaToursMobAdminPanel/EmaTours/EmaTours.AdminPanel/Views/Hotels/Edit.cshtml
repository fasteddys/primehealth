@model EmaTours.DTOs.Business.HotelDTO

@{
    ViewBag.Title = "Edit";
}


@{
    List<EmaTours.DTOs.Business.LanguageDTO> Languages = ViewBag.Languages;
    List<EmaTours.DTOs.Business.OperatingCountryDTO> Countries = ViewBag.Countries;
    List<EmaTours.DTOs.Business.OperatingLocationDTO> Locations = ViewBag.Locations;

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card card-outline-info">
        <div class="card-header">
            <h4 class="m-b-0 text-white">Edit Hotel : @Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="form-horizontal">                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.HotelID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LanguageFK, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.LanguageFK, new SelectList(Languages.Select(x => new { Value = x.LanguageID, Text = x.LanguageName }), "Value", "Text"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LanguageFK, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OperatingCountryFK, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.OperatingCountryFK, new SelectList(Countries.Select(x => new { Value = x.OperatingCountryID, Text = x.OperatingCountryName }), "Value", "Text"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OperatingCountryFK, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OperatingLocationFK, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.OperatingLocationFK, new SelectList(Locations.Select(x => new { Value = x.OperatingLocationID, Text = x.OperatingLocationName }), "Value", "Text"), new { @class = "form-control" })   
                        @Html.ValidationMessageFor(model => model.OperatingLocationFK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Edit Hotel" class="btn btn-primary" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

