
@{
    ViewBag.Title = "AddMIAuditRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CustomCss/CustomCSS.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-6 Mcenter">
            <h4 class="text-center marginBottom">MI Audit Request</h4>
            <form class="form">
                <div class="formOverlay">
                    <i class="btn btn-primary fa fa-lock "></i>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row">
                    <div class="col-md-4">
                        <label for="ClaimsCount">Claims Count</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="placeHolderSmallSize  form-control" id="ClaimsCount" placeholder="Claims Count" value="0" disabled />
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row">
                    <div class="col-md-4">
                        <label for="MIComment">Comment </label>
                    </div>
                    <div class="col-md-8">
                        <textarea name="Comment" class="placeHolderSmallSize form-control" id="MIComment" placeholder="Comment" rows="2"></textarea>
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none" id="btnAssignRequest">Assign</button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none" id="btnTransferRequest">Transfer</button>

                    </div>
                    <div class="col-md-8">
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none" id="btnSaveMIRequest">Save</button>
                    </div>
                </div>

            </form>
            <div class="col-md-12">
                <button type="button" class="btn btn-primary form-control text-5 " id="btnLock" style="display:none;">Lock</button>
            </div>
            <div class="col-md-12">
                <button type="button" class="btn btn-primary form-control text-5 " id="btnUnLock" style="display:none;">UnLock</button>
            </div>
        </div>


    </div>
</div>
<script src="~/CustomJavaScript/MIAuditJS/MIAudit.js"></script>