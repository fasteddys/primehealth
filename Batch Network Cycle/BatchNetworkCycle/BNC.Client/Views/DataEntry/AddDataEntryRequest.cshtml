
@{
    ViewBag.Title = "AddDataEntryRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 Mcenter">
            <h4 class="text-center marginBottom">
                DataEntry Batch Assigning Request</h4>
            <form class="form">
                <div class="form-group row">
                    <div class="col-md-5">
                        <label for="BatchID">Batch ID<span class="red"> </span> </label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="BatchID" disabled />
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row">
                    <div class="col-md-5">
                        <label for="BatchID">Total Batch Claims<span class="red"> </span> </label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="TotalBatchClaims" disabled />
                    </div>
                </div>

                <!--*****************************************************************-->
                <div class="form-group row AssignFields"  style="display:none;">
                    <div class="col-md-5">
                        <label for="BatchID">Remaining UnAssigned Claims<span class="red"> </span> </label>
                    </div>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="RemainingUnAssignedClaims" disabled />
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row AssignFields"  style="display:none;">
                    <div class="col-md-5">
                        <label for="DataEntryName">Data Entry Users<span class="red"> *</span> </label>
                    </div>
                    <div class="col-md-7">
                        @Html.DropDownList("DataEntryUsers", null, "Select Data Entry User", htmlAttributes: new { @class = "form-control", @id = "DataEntryUsers" })
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row AssignFields"  style="display:none;">
                    <div class="col-md-5">
                        <label for="DataEntryAdminstrationClaimsCount">Number Of Claims<span class="red"> *</span> </label>
                    </div>
                    <div class="col-md-7">
                        <input type="number" class="form-control" id="DataEntryAdminstrationClaimsCount" placeholder="Number Of Claims" />
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="form-group row">
                    <div class="col-md-5">
                        <label for="DataEntryComment">Comment </label>
                    </div>
                    <div class="col-md-7">
                        <textarea name="Comment" class="placeHolderSmallSize form-control" id="DataEntryComment" placeholder="Comment" rows="2"></textarea>
                    </div>
                </div>
                <!--*****************************************************************-->
                <div class="row">
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-7">
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none;" id="btnSaveDataEntryRequest">Assign To</button>
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none;" id="btnTransferDataEntryRequest">Transfer</button>
                        <button type="button" class="btn btn-primary form-control text-5 " style="display:none;" id="btnAssignDataEntryAdminstrationRequest">Assign</button>

                        
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="~/CustomJavaScript/DataEntryJS/AddDataEntryRequest.js"></script>
