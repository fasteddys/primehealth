@model TasksMonitoringSystem.Task

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="divCenter col-md-6">

        <h2 class="headerPage text-center wow fadeInDown" data-wow-duration="1s">Edit Task</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

