@model IEnumerable<TasksMonitoringSystem.Task>

@{
    ViewBag.Title = "Index";
    ViewBag.page = 3;
    ViewBag.myTask = false;
    ViewBag.ControllerName = "Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class=" headerPage text-center wow fadeInDown" data-wow-duration="1s">Tasks</h2>
<p >
    @Html.ActionLink("Add New Task", "Create",false, new { @class = "btn btn-primary hvr-grow" })
</p>
@{
    Html.RenderPartial("_CompanyDropDown");

}
<table class="table table-striped table-bordered">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.TaskID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyDIM.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriorityTypeDIM.PriorityTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.IsActive)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaskID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaskName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyDIM.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriorityTypeDIM.PriorityTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TaskID }, new { @class = "btn btn-info hvr-bounce-in m-r-5 m-b-5" }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.TaskID }) |*@
            @if (item.IsActive==true)
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.TaskID }, new { @class = "btn btn-danger hvr-pulse " })
            }
        </td>
    </tr>
}

</table>

