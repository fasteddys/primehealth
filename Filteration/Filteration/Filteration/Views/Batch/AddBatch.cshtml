@model Filteration.Models.Batch
@{
    ViewBag.Title = "Add Batch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">

            <h4 class="mb"><i class="fa fa-angle-right"></i>Add new Batch to an existing ticket</h4>
            <form class="form-horizontal style-form">
               
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Ticket Number</label>
                    <div class="col-sm-10">
                        <input type="text" id="TicketNumberInput" class="form-control" name="TicketNumberInput">

                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Batch Number</label>
                    <div class="col-sm-10">
                        <input type="text" id="BatchNumberInput" class="form-control" name="BatchNumberInput">

                    </div>
                </div>
                


               
                <input type="button" class="btn btn-theme" id="AddBatch1" value="Add">

            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $("#AddBatch1").on("click", function () {
      
        var info = {
            TicketNumber: $("#TicketNumberInput").val(),
            BatchNumber: $("#BatchNumberInput").val(),

        }
        var x = JSON.stringify(info);
        $.ajax({
            url: '@Url.Action("AddNewBatch", "Batch")',
            data: x,
            contentType: 'application/json; charset=utf-8',
            type: 'POST',
            success: function (data, status) {

                alert("success");

            }


        });
        $("#AddBatch").hide();

    });
    </script>
