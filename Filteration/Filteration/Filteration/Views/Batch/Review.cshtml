@model List<Filteration.Models.Batch>
@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>Assigned Batches</h4>
            <table class="table table-striped table-advance table-hover">




                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().TicketNumber)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BatchNumber)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().BatchStatus)
                    </th>

                    <th class="ReviewFN">Action</th>



                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BatchNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BatchStatus)

                        </td>
                        <td class="Review_Finish_Batch">
                            <button class="btn btn-primary btn-xs" onclick="window.location = '/Batch/Review_Finish/@item.Id?status=@ViewBag.Status';"><i class="fa fa-pencil"></i></button>
                        </td>

                    </tr>
                }

            </table>
        </div>
    </div>
</div>
