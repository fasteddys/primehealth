@model Hr_System.Models.DepartmentTB

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css">
}


<strong>Create New Department</strong>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="DeptName">
                Department Name <span class="required">*</span>
            </label>
            <div class="col-md-3 col-sm-3 col-xs-12">
                <input type="text" id="DeptName" name="DeptName" class="form-control col-md-7 col-xs-12" />
                @Html.ValidationMessageFor(model => model.DeptName)
            </div>
        </div>
        <div class="ln_solid">
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <br />
                    <button class="btn btn-round btn-success" type="submit" value="Create New Department "> Create New Department</button>
                </div>
            </div>
        </div>
    </div>
}