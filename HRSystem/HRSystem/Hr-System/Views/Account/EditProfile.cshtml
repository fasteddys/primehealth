@model Hr_System.Models.accountTB
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/css/jq/jqu.css" rel="stylesheet" />
    <script src="~/css/jq/JS.js"></script>
    <script src="~/css/jq/JSS.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnsubmit").click(function () {
                var acc;
                acc = {
                    ID:$("#ID").val(),
                    Password:$("#Password").val()
                }
                var x = JSON.stringify(acc);
                $.ajax({
                    url: '@Url.Action("UpdatePassword","Account")',
                    data: x,
                    contentType: 'application/json; charset=utf-8',
                    type: 'POST',
                    success: function (data, status) {
                        if (data == "Same Password Nothing Changed !")
                        {
                            alert(data);
                        }
                        else
                        {
                            alert(data);
                            window.location = '@Url.Action("Login", "Login")';
                        }
                    }

                })

            })
        })
    </script>
}

<h2>Edit My Account</h2>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <br />
            <h2>Account Details</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu"></ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @Html.HiddenFor(model => model.ID, new {@id="ID" })
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UserName">
                    User Name
                 </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <input type="text" value="@ViewBag.UserName" disabled="disabled" id="UserName" name="UserName" class="form-control col-md-7 col-xs-12" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Password">
                    Password
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <input type="password" value="@ViewBag.Password" id="Password" name="Password" class="form-control col-md-7 col-xs-12" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <button class="btn btn-round btn-success" type="submit" id="btnsubmit" value="Update Password "> Update Password </button>
                </div>
            </div>
</div>
</div>
</div>