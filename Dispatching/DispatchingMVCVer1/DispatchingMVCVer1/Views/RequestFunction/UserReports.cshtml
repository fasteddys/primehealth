@{
    ViewBag.Title = "UserReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jq/JS.js"></script>
<script src="~/Scripts/jq/JSS.js"></script>
<link href="~/Scripts/jq/sheet.css" rel="stylesheet" />


@section HeaderSection
     {
    <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.0.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.js"></script>
    <div class="row">
        <div class="col-md-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
                <li><a href="#">User Reports</a></li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <header class="panel-heading">
                    Report
                </header>
                <br />
                <div align="center">
                    <button type="button" id="Users" class="btn-lg btn-success">Users</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="button" id="Providers" class="btn-lg btn-warning">Providers</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="button" id="Claims" class="btn-lg btn-primary">Claims</button>
                </div>
                <br />
            </div>
        </div>
    </div>
</section>
<section class="content Users" style="display:none">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <header class="panel-heading">Select User</header>
                <div class="panel-body">
                    <form class="form-horizontal tasi-form" method="post" action="/RequestFunction/UserReports" role="form">

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">User Name</label>
                            <div class="col-sm-2">
                                <select class="form-control " name="UserName" id="UserName">
                                    @foreach (var item in ViewBag.Users)
                                    {
                                        <option value="@item.UserName">@item.UserName</option>
                                    }
                                </select>
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">From</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="From" id="datepicker" required>
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">To</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control " name="To" id="datepicker1" required>
                            </div>
                        </div>
                        <br />
                        <div align="center">
                            <button type="submit" class="btn btn-primary" id="btn_Submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content Providers" style="display:none">
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">Select User</header>
                <div class="panel-body">
                    <form class="form-horizontal tasi-form" method="post" action="/RequestFunction/UserReports" role="form">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Provider Name</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="ProviderName" name="ProviderName">
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">From</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="From" id="datepickerProviderFrom" required>
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">To</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control " name="To" id="datepickerProviderTo" required>
                            </div>
                        </div>
                        <br />
                        <div align="center">
                            <button type="submit" class="btn btn-primary" id="btn_Submit">Submit</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</section>
<section class="content Claims" style="display:none">
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">Select Claim Type</header>
                <div class="panel-body">
                    <form class="form-horizontal tasi-form" method="post" action="/RequestFunction/UserReports" role="form">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Claim Type</label>
                            <div class="col-sm-2">
                                <select class="form-control " name="ClaimType" id="ClaimType">
                                    <option value="Medical Pass">Medical Pass</option>
                                    <option value="QNB">QNB</option>
                                    <option value="Claims Forms Copy 3">Claims Forms Copy 3</option>
                                    <option value="Claims Forms Copy 5">Claims Forms Copy 5</option>
                                    <option value="Hospital Stamp">Hospital Stamp</option>
                                </select>
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">From</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" name="From" id="datepickerClaimFrom" required>
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">To</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control " name="To" id="datepickerClaimTo" required> 
                            </div>
                        </div>
                        <br />
                        <div align="center">
                            <button type="submit" class="btn btn-primary" id="btn_Submit">Submit</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</section>
<section class="content Report" id="report" style="display:none">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <header class="panel-heading">
                    Report
                </header>
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr id="nameField">
                            <td> <label class="col-lg-12 col-sm-12 control-label">Name</label> </td>
                            <td> <div class="col-lg-12 col-sm-12 control-label " style="font-weight: bold;" id="name" >  </div> </td>
                        </tr>
                        <tr id="type">
                            <td> <label class="col-lg-12 col-sm-12 control-label">Employee Type</label> </td>
                            <td> <div class="col-lg-12 col-sm-12 control-label " style="font-weight: bold;" id="Type">  </div> </td>
                        </tr>
                        <tr id="ClaimtypeField">
                            <td> <label class="col-lg-12 col-sm-12 control-label">Claim Type</label> </td>
                            <td> <div class="col-lg-12 col-sm-12 control-label " style="font-weight: bold;" id="Claim">  </div> </td>
                        </tr>
                        <tr>
                            <td> <label class="col-lg-12 col-sm-12 control-label"> Total Number Of Requests</label> </td>
                            <td> <div class="col-lg-12 col-sm-12 control-label" style="font-weight: bold;" id="RequestsNum">  </div> </td>
                        </tr>
                        <tr>
                            <td> <label class="col-lg-12 col-sm-12 control-label"> Total Bocklets Delivered</label> </td>
                            <td> <div class="col-lg-12 col-sm-12 control-label" style="font-weight: bold;" id="BockletsNum">  </div> </td>
                        </tr>

                    </table>
                </div><!-- /.panel-body -->
                <div class="panel-body" style="align-content:center">
                </div>
            </div><!-- /.panel -->
            <div class="panel">
                <header class="panel-heading">
                    Requests
                </header>
                <div class="panel-body">
                    <table class="table table-bordered " id="Req" align="center">
                        <tr>
                            <th style="width: 10px ; text-align:center">ID</th>
                            <th style="text-align:center">Creator</th>
                            <th style="text-align:center">Provider Type</th>
                            <th style="text-align:center">Provider Name</th>
                            <th style="text-align:center">ClaimsType</th>
                            <th style="text-align:center"># Of Bocklets</th>
                            <th style="text-align:center" id="PreparedBy">Prepared By</th>
                            <th style="text-align:center" id="PreparedBy">Prepared Date</th>

                        </tr>
                        @if (ViewBag.report != null)
                        {
                            foreach (var item in ViewBag.report)
                            {
                                <tr>
                                    <td align="center"> @item.ReqID  </td>
                                    <td align="center"> @item.Creator  </td>
                                    <td align="center"> @item.ProviderType  </td>
                                    <td align="center"> @item.ProviderName  </td>
                                    <td align="center"> @item.ClaimsType  </td>
                                    <td align="center"> @item.NumOfBocklets  </td>
                                    <td align="center"> @item.PreparingPerson  </td>
                                    <td align="center"> @item.PreparationData  </td>
                                </tr>
                            }
                        }
                    </table>
                </div><!-- /.panel-body -->
                <div class="panel-body" style="align-content:center">
                </div>
            </div><!-- /.panel -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
<script>
    $(document).ready(function () {
        if ("@ViewBag.UserName" != "") {
            $("#name").html("@ViewBag.UserName");
            $("#Type").html("@ViewBag.usertype");
            $("#RequestsNum").html("@ViewBag.RequestsCount");
            $("#BockletsNum").html("@ViewBag.numberOFbocklets");
            $("#ClaimtypeField").hide();
            $(".Report").show();
        }
        if ("@ViewBag.ProviderName" != "") {
            $("#name").html("@ViewBag.ProviderName");
            $("#type").hide();
            $("#RequestsNum").html("@ViewBag.providerRequestCount");
            $("#BockletsNum").html("@ViewBag.ProvidersNumberOfBocklets");
            $("#ClaimtypeField").hide();
            $(".Report").show();
        }
        if ("@ViewBag.ClaimType" != "") {
            debugger;
            $("#nameField").hide();
            $("#type").hide();
            $("#ClaimtypeField").show();
            $("#Claim").html("@ViewBag.ClaimType");
            $("#RequestsNum").html("@ViewBag.ClaimCount");
            $("#BockletsNum").html("@ViewBag.ClaimNum");
            $(".Report").show();
        }
        $("#Users").click(function () {
            $(".Users").show();
            $(".Providers").hide();
            $(".Claims").hide();
        })
        $("#Providers").click(function () {
            $(".Users").hide();
            $(".Providers").show();
            $(".Claims").hide();
        })
        $("#Claims").click(function () {
            $(".Users").hide();
            $(".Providers").hide();
            $(".Claims").show();


        })
        $("#datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $("#datepicker1").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $("#datepickerProviderFrom").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $("#datepickerProviderTo").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $("#datepickerClaimFrom").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
        $("#datepickerClaimTo").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
    });
</script>





