<script src="~/assets/js/Director/app.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script>

    $(document).ready(function () {

        if ("@Request.Cookies["UserTypeCookie"].Value" == "SuperAdmin") {
            $("#AddNewUser").show();
            $("#UserReports").show();
            $("#AddToStock").show();
            $("#StockView").show();
            $("#StockRequest").show();
        }
        @*else if ("@Request.Cookies["UserTypeCookie"].Value" == "Admin") {
            $("#UserReports").show();
            $("#AddToStock").show();
            $("#StockView").show();
            $("#StockRequest").show();
        }*@
        else if ("@Request.Cookies["UserTypeCookie"].Value" == "CreatorAdmin") {
            $("#AddNewRequestID").show();
        }
        else if ("@Request.Cookies["UserTypeCookie"].Value" == "StockAdmin") {
            if ("@Request.Cookies["UserRoleCookie"].Value" == "Team Leader") {
                $("#AddToStock").show();
            }
            $("#StockView").show();
            $("#StockRequest").show();
        }
        else if ("@Request.Cookies["UserTypeCookie"].Value" == "InHouse" || "@Request.Cookies["UserTypeCookie"].Value" == "CallCenter" || "@Request.Cookies["UserTypeCookie"].Value" == "Provider") {
            $("#ReturnedClosedRequestID").hide();
            $("#PendingReturningID").hide();
        }
    });
    </script>